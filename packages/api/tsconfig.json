// packages/api/tsconfig.json
{
  "extends": "@workspace/typescript-config/base.json",
  "compilerOptions": {
    "composite": true, // <--- Add this
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@workspace/api/*": ["./src/*"] // For internal paths, this is fine
      // "@workspace/db/*": ["../../packages/db/src/*"] // <<<--- REMOVE THIS LINE
    }
    // "noEmit": false is inherited from base.json, which is correct
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "references": [
    // <--- Add this whole section
    { "path": "../db" } // Path to the @workspace/db package directory
  ]
}
