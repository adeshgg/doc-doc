// packages/db/tsconfig.json
{
  "extends": "@workspace/typescript-config/base.json",
  "compilerOptions": {
    "composite": true, // <--- Add this
    "outDir": "./dist", // This was "dist"
    "rootDir": "./src", // <--- Add this for clarity
